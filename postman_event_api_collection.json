{
  "info": {
    "_postman_id": "event-api-collection",
    "name": "Event API - Image Upload",
    "description": "Create and manage events with S3 image storage",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Event with Image",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "  var jsonData = pm.response.json();",
              "  pm.environment.set('event_id', jsonData.data.event._id);",
              "  pm.environment.set('event_image_url', jsonData.data.event.coverImageUrl || jsonData.data.event.coverImage);",
              "  console.log('‚úÖ Event created:', jsonData.data.event.name);",
              "  console.log('üì∏ Image URL:', jsonData.data.event.coverImageUrl || jsonData.data.event.coverImage);",
              "} else {",
              "  console.log('‚ùå Event creation failed:', pm.response.code);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "name",
              "value": "Tech Summit 2025",
              "type": "text"
            },
            {
              "key": "description",
              "value": "Join us for the biggest tech conference of the year",
              "type": "text"
            },
            {
              "key": "date",
              "value": "2025-12-20",
              "type": "text"
            },
            {
              "key": "startTime",
              "value": "09:00",
              "type": "text"
            },
            {
              "key": "endTime",
              "value": "18:00",
              "type": "text"
            },
            {
              "key": "location",
              "value": "Bangalore, India",
              "type": "text"
            },
            {
              "key": "organizer",
              "value": "{{organizer_id}}",
              "type": "text"
            },
            {
              "key": "totalTickets",
              "value": "1000",
              "type": "text"
            },
            {
              "key": "ticketPrice",
              "value": "499.99",
              "type": "text"
            },
            {
              "key": "category",
              "value": "technology",
              "type": "text"
            },
            {
              "key": "coverImage",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "http://localhost:3000/api/events",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "events"
          ]
        },
        "description": "Create a new event with a cover image. The image is uploaded to AWS S3 and a public URL is returned."
      },
      "response": []
    },
    {
      "name": "Get Event by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/events/{{event_id}}",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "events",
            "{{event_id}}"
          ]
        },
        "description": "Retrieve a specific event with its image URL"
      },
      "response": []
